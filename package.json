{
  "name": "bun-websocket-demo",
  "version": "1.0.0",
  "description": "Simple WebSocket server using Bun and Socket.IO",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/server.ts --outdir ./dist --target bun",
    "build:css": "bun run ./src/build-css.ts",
    "start": "bun run ./dist/server.js",
    "dev": "bun --hot run ./src/server.ts",
    "test": "bun test",
    "lint": "bun run eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cookie-parser": "^1.4.6",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "socket.io-client": "^4.7.2",
    "typescript": "^5.3.3"
  }
}
