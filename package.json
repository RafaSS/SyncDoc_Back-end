{
  "name": "syncdoc",
  "version": "1.0.0",
  "description": "A real-time collaborative document editing application",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/app.ts",
    "dev": "bun --watch src/app.ts",
    "build": "bun build src/app.ts --outdir dist",
    "test": "bun test",
    "test:socket": "bun run-tests.js socket",
    "test:e2e": "bun run-tests.js e2e",
    "test:all": "bun run-tests.js all",
    "test:debug": "bun test --debug",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "bun-types": "^1.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "puppeteer": "^22.0.0",
    "socket.io-client": "^4.7.2",
    "supertest": "^7.0.0",
    "typescript": "^5.1.6"
  }
}
