{
  "name": "bun-websocket-demo",
  "version": "1.0.0",
  "description": "Simple WebSocket server using Bun and Socket.IO",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && bun run build-css.js",
    "build:css": "bun run build-css.js",
    "start": "bun run dist/server.js",
    "dev": "bun run --watch src/server.ts",
    "test": "bun test --bail src/server.test.ts",
    "postinstall": "bun run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cookie-parser": "^1.4.6",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "socket.io-client": "^4.7.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cookie-parser": "^1.4.6",
    "@types/uuid": "^9.0.7",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0"
  }
}
